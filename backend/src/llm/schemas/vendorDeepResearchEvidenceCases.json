{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "vendor_deep_research_evidence_cases_phase",
  "type": "object",
  "properties": {
    "caseStudies": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": { "type": "string" },
          "client": { "type": "string" },
          "challenge": { "type": "string" },
          "solution": { "type": "string" },
          "results": {
            "type": "array",
            "items": { "type": "string" }
          },
          "metrics": {
            "type": "array",
            "items": { "type": "string" }
          },
          "source": {
            "type": "string",
            "minLength": 1,
            "pattern": "^https?://[^\\s\"]+$"
          }
        },
        "required": ["title", "client", "challenge", "solution", "results", "metrics", "source"],
        "additionalProperties": false
      }
    }
  },
  "required": ["caseStudies"],
  "additionalProperties": false
}

