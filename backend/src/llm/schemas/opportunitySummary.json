{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "OpportunitySummarySection",
  "type": "object",
  "additionalProperties": false,
  "required": ["companyName", "industry", "opportunityBrief", "clientKPIs", "opportunityKPIs"],
  "properties": {
    "companyName": { "type": "string" },
    "industry": { "type": "string" },
    "headquarters": { "type": "string" },
    "opportunityBrief": { "type": "string" },
    "clientKPIs": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["label", "value"],
        "properties": {
          "label": { "type": "string" },
          "value": { "type": "string" },
          "trend": { "type": "string", "enum": ["up", "down", "stable"] }
        }
      }
    },
    "opportunityKPIs": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["label", "value"],
        "properties": {
          "label": { "type": "string" },
          "value": { "type": "string" },
          "importance": { "type": "string", "enum": ["high", "medium", "low"] }
        }
      }
    }
  }
}

