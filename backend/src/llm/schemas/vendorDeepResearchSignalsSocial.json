{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "vendor_deep_research_signals_social_phase",
  "type": "object",
  "properties": {
    "socialSignals": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "platform": { "type": "string" },
          "summary": { "type": "string" },
          "date": { "type": "string" },
          "url": {
            "type": "string",
            "minLength": 1,
            "pattern": "^https?://[^\\s\"]+$"
          },
          "relevance": {
            "type": "string",
            "enum": ["high", "medium", "low"]
          }
        },
        "required": ["platform", "summary", "date", "url", "relevance"],
        "additionalProperties": false
      }
    }
  },
  "required": ["socialSignals"],
  "additionalProperties": false
}

