{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ProposalOutlineLite",
  "type": "object",
  "additionalProperties": false,
  "required": ["sections"],
  "properties": {
    "sections": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "title", "purpose", "suggestedContent", "linkedEvidenceIds"],
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" },
          "purpose": { "type": "string" },
          "suggestedContent": {
            "type": "array",
            "items": { "type": "string" }
          },
          "linkedEvidenceIds": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    }
  }
}

