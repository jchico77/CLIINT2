{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CriticalDatesSection",
  "type": "object",
  "additionalProperties": false,
  "required": ["dates", "summary"],
  "properties": {
    "dates": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "date", "event", "type", "importance"],
        "properties": {
          "id": { "type": "string" },
          "date": { "type": "string" },
          "event": { "type": "string" },
          "type": {
            "type": "string",
            "enum": ["deadline", "milestone", "meeting", "decision", "other"]
          },
          "importance": {
            "type": "string",
            "enum": ["critical", "high", "medium", "low"]
          },
          "description": { "type": "string" },
          "stakeholders": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    },
    "summary": { "type": "string" }
  }
}

